{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('assets/css/agenda_style.css')}}">
{% endblock %}

{% block body %}

	{% include "site-parts/slider.html.twig" %}

    


	<div class="container mt-2">

		<h1 class="mb-6">l'agenda</h1>

		{% for event in events %}
			<div class="card mb-3" style="max-width: auto;">
				<div class="row no-gutters">
					<div class="col-md-3">
						<img src="{{asset('assets/images/scene.jpg')}}" class="card-img" alt="...">
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<h2 class="card-title"><a href="{{ path('vitrine_event', {idEvent : event.id}) }}">{{event.name}}</a></h2>
							<h3 class="card-title">{{event.lieu.name}} à {{event.lieu.ville}}</h3>
                            <h4 class="card-title">{{event.dateBegin | date("d/m/Y")}} au {{event.dateEnd | date("d/m/Y")}}</h4>
                            <h5 class="card-text">{{event.description}}</h5>
						</div>
					</div>
				</div>
			</div>
{% endfor %}

		<div class="row justify-content-around">
            <div class="col-3">
                {% if from > 1 %}
                    <a class="btn btn-warning" href="{{path('agenda', {page : from - 1}) }}"><h3>Précédent</h3></a>
                {% endif %}
            </div>
            <div class="col-3">
				{% if not pageFuture is empty %}
				<a class="btn btn-warning" href="{{ path('agenda', {page : from + 1}) }}"><h3>Suivant</h3></a>
				{% endif %}
            </div>
        </div>
	{% endblock %}
