{% extends "base.html.twig" %}

{% block body %}
    {# {{ dump(app.user) }} #}
<div class="container">
    <h1>Vous êtes sur votre page utilisateur, {{groupe.name}}</h1>
    <p>Vous êtes un <strong>groupe</strong> catégorisé en tant que <strong>{{groupe.type.name}}</strong>.</p>

    <p>Votre email identifiant est <strong>{{groupe.account.email}}</strong></p>
    <a href="#" class="btn btn-primary">Chercher une annonce</a>
    <a href="{{ path("groupe_update") }}" class="btn btn-primary">Modifier mes informations</a>


    <h2 class="mt-3">Vos offres reçues</h2>
    <div class="row">
    {% for offre in offres %}
        {% if not offre.validated %}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{offre.annonce.nomEvent}}</h5>
                <p class="card-text">{{offre.annonce.dateBegin | date("d/m/Y")}} - {{offre.annonce.dateEnd | date("d/m/Y")}}</p>
                <p class="card-text">{{offre.annonce.lieu.name}} à {{offre.annonce.lieu.ville}} ({{offre.annonce.lieu.departement}})</p>
                <p class="card-text">{{offre.message}}</p>
                <a href="{{ path("validate_offre", {idOffre : offre.id}) }}" class="btn btn-success">Accepter</a>
                <a href="{{ path("delete_offre", {idOffre : offre.id}) }}" class="btn btn-danger">Refuser</a>
            </div>
        </div>
        {% endif %}
    {% endfor %}
    </div>

    <h2 class="mt-3">Vos offres validées</h2>
    <div class="row">
    {% for offre in offres %}
        {% if offre.validated %}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{offre.annonce.nomEvent}}</h5>
                <p class="card-text">{{offre.annonce.dateBegin | date("d/m/Y")}} - {{offre.annonce.dateEnd | date("d/m/Y")}}</p>
                <p class="card-text">{{offre.annonce.lieu.name}} à {{offre.annonce.lieu.ville}} ({{offre.annonce.lieu.departement}})</p>
                <p class="card-text">{{offre.message}}</p>
                <a href="{{ path("delete_offre", {idOffre : offre.id}) }}" class="btn btn-danger">Se rétracter</a>
            </div>
        </div>
        {% endif %}
    {% endfor %}
    </div>
</div>


{% endblock %}