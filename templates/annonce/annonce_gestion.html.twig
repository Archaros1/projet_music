{% extends "base.html.twig" %}

{% block body %}

    <div class="container">
        <h1>{{ annonce.nomEvent }}</h1>
        <h2>Genre : {{ annonce.genreEvent }}</h2>
        <h2>Type : {{ annonce.typeEvent.name }}</h2>

        <p>Localisation : {{ annonce.lieu.name }} à {{ annonce.lieu.ville }}</p>
        <p>Département : {{ annonce.lieu.departement }}</p>
        <ul>
            <li>Début : {{ annonce.dateBegin | date('d/m/Y') }}</li>
            <li>Fin : {{ annonce.dateEnd | date('d/m/Y') }}</li>
        </ul>

        {# {{ dump(annonce.styleRecherche) }} #}
        
        <p>Style(s) recherché(s)</p>
        <ul>
        {% for style in annonce.styleRecherche %}
            <li>{{ style }}</li>
        {% endfor %}
        </ul>

        <a href="{{ path('search_groupe') }}" class="btn btn-primary mb-3">Chercher des groupes</a>

        <h2>Vos offres envoyées</h2>
        {% for offre in offres %}
            {% if not offre.validated %}
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{offre.annonce.nomEvent}}</h5>
                    <p class="card-text">{{offre.annonce.dateBegin | date("d/m/Y")}} - {{offre.annonce.dateEnd | date("d/m/Y")}}</p>
                    <p class="card-text">{{offre.annonce.lieu.name}} à {{offre.annonce.lieu.ville}} ({{offre.annonce.lieu.departement}})</p>
                    <p class="card-text">{{offre.message}}</p>
                    <a href="{{ path("delete_offre", {idOffre : offre.id}) }}" class="btn btn-danger">Se rétracter</a>
                </div>
            </div>
            {% endif %}
        {% endfor %}

        <h2 class="mt-3">Vos offres acceptées</h2>
        <div class="row">
        {% for offre in offres %}
            {% if offre.validated %}
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{offre.annonce.nomEvent}}</h5>
                    <p class="card-text">{{offre.annonce.dateBegin | date("d/m/Y")}} - {{offre.annonce.dateEnd | date("d/m/Y")}}</p>
                    <p class="card-text">{{offre.annonce.lieu.name}} à {{offre.annonce.lieu.ville}} ({{offre.annonce.lieu.departement}})</p>
                    <p class="card-text">{{offre.message}}</p>
                    <a href="{{ path("delete_offre", {idOffre : offre.id}) }}" class="btn btn-danger">Se rétracter</a>
                </div>
            </div>
            {% endif %}
        {% endfor %}
    </div>


    <a href="{{ path("create_event", {idAnnonce : annonce.id}) }}" class="btn btn-success mt-5">Officialiser l'évènement</a>
    <a href="{{ path("delete_annonce", {idAnnonce : annonce.id}) }}" class="btn btn-danger mt-5">Supprimer l'annonce</a>
    </div>

{% endblock %}