{% extends 'base.html.twig' %}

{% block body %}
    
    <div class="container">
        <h1>Update</h1>
        {{ form_start(groupeForm) }}
        <div class="form-group mt-5">
            <div class="row">
                <div class="col-2 mb-4">
                    {{ form_row(groupeForm.name, {'attr': {class : "form-control"}}) }}
                </div>
                <div class="col-4 mb-4">
                    {{ form_row(groupeForm.nombre_membre, {'attr': {class : "form-control"}}) }}
                </div>
                <div class="col-12 mb-4">
                    {{ form_row(groupeForm.description, {'attr': {class : "form-control"}}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-2 mb-4">
                    {{ form_row(groupeForm.a_domicile, {'attr': {class : "form-control"}}) }}
                </div>
                <div class="col-2 mb-4">
                    {{ form_row(groupeForm.a_tout_son_materiel, {'attr': {class : "form-control"}}) }}
                </div>
                <div class=" mb-4">
                    {{ form_row(groupeForm.style, {'attr': {class : ""}}) }}
                </div>
                <div class="col-2 mb-4">
                    {{ form_row(groupeForm.type, {'attr': {class : "form-control"}}) }}
                </div>
            </div>
            <div class="row">
                    {{ form_row(groupeForm.submit, {'attr' : {class : "btn btn-primary"}}) }}
            </div>
        </div>
    {{ form_end(groupeForm) }}
</div>

{% endblock %}

