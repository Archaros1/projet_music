{% extends 'admin_base.html.twig' %}

{% block body %}
    <h1>Update</h1>

    {{ form_start(organisateurForm) }}
    <div class="form-group mt-5">
        <div class="row">
            <div class="col-2">
                {{ form_row(organisateurForm.name, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-4">
                {{ form_row(organisateurForm.mail, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-12">
                {{ form_row(organisateurForm.pw, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-12">
                {{ form_row(organisateurForm.content, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-4 mt-5">
                {{ form_row(organisateurForm.ajouter, {'attr' : {class : "btn btn-primary"}}) }}
            </div>
            <div class="col-2">
                {{ form_row(organisateurForm.title, {'attr': {class : "form-control"}}) }}
            </div>

        </div>
    </div>

    {{ form_end(organisationForm) }}

{% endblock %}