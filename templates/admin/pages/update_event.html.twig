{% extends 'base.html.twig' %}

{% block body %}
	<h1>Update</h1>
	<div class="container">
		{{ form_start(eventForm) }}
		<div class="form-group mt-5">
			<div class="row">
				<div class="col-4">
					{{ form_row(eventForm.name, {'attr': {class : "form-control"}}) }}
				</div>
			</div>
			<div class="row">
				<div class="col">
					{{ form_row(eventForm.description, {'attr': {class : "form-control"}}) }}
				</div>
			</div>
			<div class="row mt-2">
				<div class="col mb-2">
					{{ form_row(eventForm.date_begin, {'attr': {class : ""}}) }}
				</div>

				<div class="col mb-4">
					{{ form_row(eventForm.date_end, {'attr': {class : ""}}) }}
				</div>

				<div class="col mb-4">
					{{ form_row(eventForm.lieu, {'attr': {class : "form-control"}}) }}
				</div>
			</div>
			<div class="row">
				{{ form_row(eventForm.style, {'attr' : {class : ""}}) }}
			</div>

			<div class="row">
				{{ form_row(eventForm.submit, {'attr' : {class : "btn btn-primary"}}) }}
			</div>


		</div>

		{{ form_end(eventForm) }}
	</div>


{% endblock %}
