{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('assets/css/sous_form.css')}}">
{% endblock %}

{% block body %}

<div class="container">

  <h1>Mod√©ration de l'agenda</h1>
  <div class="row">
    <div class="col-8 mb-4">
        <h3>Liste de tous les events en attente de validation</h3>
    </div>
    <div class="col-4 mb-4">
        <h3>Validation</h3>
    </div>
  </div>

  {% for event in events %}

  <div class="row">
    <div class="col-2 mb-3">
        <h5>{{event.name}}</h5>  
    </div>
    <div class="col-6 mb-3">
        <p>{{event.description}}</p>
    </div>
     <div class="col-4 mb-3">
        <a href="{{ path('admin_add_event', {idEvent : event.id}) }}" class="btn btn-success">Accepter</a>
        <a href="{{ path('admin_delete_event', {idEvent : event.id}) }}" class="btn btn-danger">Refuser</a>
    </div>
  </div>

  {% endfor %}
  
</div>

{% endblock %}

