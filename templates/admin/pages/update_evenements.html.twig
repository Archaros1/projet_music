        <div class="row">
            <div class="col-2">
                {{ form_row(evenementForm.name, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-4">
                {{ form_row(evenementForm.description, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-12">
                {{ form_row(evenementForm.date_begin, {'attr': {class : "form-control"}}) }}
