             <div class="col-2">
                {{ form_row(evenementForm.lieu, {'attr': {class : "form-control"}}) }}
            </div>
             <div class="col-2">
                {{ form_row(evenementForm.contacts, {'attr': {class : "form-control"}}) }}
            </div>
             <div class="col-2">
                {{ form_row(evenementForm.groupes, {'attr': {class : "form-control"}}) }}
            </div>
             <div class="col-2">
                {{ form_row(evenementForm.style, {'attr': {class : "form-control"}}) }}
            </div>
             <div class="col-2">
                {{ form_row(evenementForm.photos, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-4 mt-5">
                {{ form_row(evenementForm.ajouter, {'attr' : {class : "btn btn-primary"}}) }}
