{% extends 'admin_base.html.twig' %}

{% block body %}
    <h1>Update</h1>

    {{ form_start(annonceForm) }}
    <div class="form-group mt-5">
        <div class="row">
            <div class="col-2">
                {{ form_row(annonceForm.nom_event, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-4">
                {{ form_row(annonceForm.organisateur, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-12">
                {{ form_row(annonceForm.offres, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-12">
                {{ form_row(annonceForm.genre_event, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-2">
                {{ form_row(annonceForm.type_event, {'attr': {class : "form-control"}}) }}
            </div>
             <div class="col-2">
                {{ form_row(annonceForm.style_recherche, {'attr': {class : "form-control"}}) }}
            </div>
             <div class="col-2">
                {{ form_row(annonceForm.date_begin, {'attr': {class : "form-control"}}) }}
            </div>
             <div class="col-2">
                {{ form_row(annonceForm.date_end, {'attr': {class : "form-control"}}) }}
            </div>
             <div class="col-2">
                {{ form_row(annonceForm.lieu, {'attr': {class : "form-control"}}) }}
            </div>
             <div class="col-2">
                {{ form_row(annonceForm.description, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-2">
                {{ form_row(annonceForm.contacts, {'attr': {class : "form-control"}}) }}
            </div>
            <div class="col-4 mt-5">
                {{ form_row(annonceForm.ajouter, {'attr' : {class : "btn btn-primary"}}) }}
            </div>
            

        </div>
    </div>

    {{ form_end(annonceForm) }}

{% endblock %}


